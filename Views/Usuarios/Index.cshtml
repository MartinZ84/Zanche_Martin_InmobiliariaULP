@model IEnumerable<Zanche_Martin_InmobiliariaULP.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
           
            <th>
               Rol
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
         
            <td>
              @if(String.IsNullOrEmpty(item.Avatar)){	  <img width="32" class="rounded mx-auto d-block"  src="https://www.gravatar.com/avatar/00000000000000000000000000000000?d=mm&f=y" />}
              else {
                	<img width="32" class="rounded mx-auto d-block"  src="@item.Avatar" />
               }
            </td>
        
            <td>
                @Html.DisplayFor(modelItem => item.RolNombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.Id },new {@class="btn btn-success"}) |
                @Html.ActionLink("Detalles", "Details", new {  id=item.Id },new {@class="btn btn-warning"}) |
                @Html.ActionLink("Borrar", "Delete", new {  id=item.Id  }, new {@class="btn btn-danger"});
            </td>
        </tr>
}
    </tbody>
</table>
