@model Zanche_Martin_InmobiliariaULP.Models.Pago

@{
    ViewData["Title"] = "Crear pago";
    //Obtengo el id del contrato para no perder la referencia al mismo
    var ContratoId=ViewBag.ContratoId;
    var nroPago= ViewBag.nroPago;
    var importe=ViewBag.importe;
}

<h1>Realizar pago</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="None" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div> *@
                <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                          
            </div>
            <div class="input-group">
               <input asp-for="ContratoId" class="form-control" disabled value=@ContratoId />
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            
              <div class="input-group-append">
                            @Html.ActionLink("Detalles del contrato", "Details", "Contratos",new {  id=@ContratoId},new {@class="btn btn-secondary"})       
                
              </div>
            </div>
            
            <div class="form-group">
                <label asp-for="NroPago" class="control-label"></label>
                <input asp-for="NroPago" class="form-control" value=@nroPago />
                <span asp-validation-for="NroPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" id='fechaActual'   />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" value="@importe"/>
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
        
            <br>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    @* <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a> *@
